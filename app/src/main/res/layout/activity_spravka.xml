<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_spravka"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.genya.myapplication.spravka"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="Поиск рейсов"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:gravity="center"
                android:textSize="18sp" />

            <TextView
                android:text="В профиле необходимо через меню приожения перейти в расписание."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="248dp"
                android:layout_height="175dp"
                app:srcCompat="@drawable/one"
                android:id="@+id/imageView"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="Откроется окно следующео вида:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="299dp"
                android:layout_height="232dp"
                app:srcCompat="@drawable/two"
                android:id="@+id/imageView2"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

            <TextView
                android:text="В верхней части окна находятся элементы, с помощью которых можно задавать критерии для поиска как показано в примере ниже:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/three"
                android:id="@+id/imageView3"
                android:layout_marginTop="10dp" />

            <TextView
                android:text='Установив необходимые критерии нужно нажать кнопку "ОК", после чего список рейсов обновиться исходя из ваших нужд. Кнокой "Х" поиск можно обнулить.'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView26"
                android:layout_marginTop="15dp" />

            <TextView
                android:text="Бронирование билета"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView27"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <TextView
                android:text="для бронирования билета необходимо из окна расписания перейти в окно подробной информации о рейсе как показано в примере ниже:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView28"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/four"
                android:id="@+id/imageView4"
                android:layout_height="200dp" />

            <TextView
                android:text="Откроется окно следующего вида:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView29"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:srcCompat="@drawable/five"
                android:id="@+id/imageView5"
                android:layout_weight="0.45" />

            <TextView
                android:text='Здесь необходимо ввести номер рейса, который вас заинтересовал и нажать кнопку "Найти." После чего отобразится подробная информация о рейсе. В самом низу можно найти форму для бронирования билета. Необхоимо выбрать класс пассажирского места и количество билетов.'
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView31"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/six"
                android:id="@+id/imageView6" />

            <TextView
                android:text="Вводить можно количество билетов не больше, чем количество доступных мест. Для того, чтобы удостовериться, что бронь прошла успешно необходимо вернуться в профиль, где отобразится список билетов как показано на картинке:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView32"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/seven"
                android:id="@+id/imageView7" />

            <TextView
                android:text="Общая информация"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView35"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:text="Все цены указаны в американских долларах."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView37"
                android:layout_marginTop="15dp" />

            <TextView
                android:text="Отменить бронирование можно в профиле пользователя. Для этого нужно долгим нажатием по нужному билету вызвать котекстное меню и выбрать соответствующий пункт. Либо позвоните по номеру хх-ххх-ххх."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView38"
                android:layout_marginTop="15dp" />

            <TextView
                android:text="Для того. чтобы забрать и оплатить билет вам необходимо подъехать к месту продажи билетов. Подробную информацию об этом вы можете уточнить по телефону хх-ххх-ххх."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView39"
                android:layout_marginTop="15dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
